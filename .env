# Application
APP_NAME="Muset AI Writing Assistant"
APP_VERSION="0.1.0"
DEBUG=false

# Server
HOST=0.0.0.0
PORT=7989

# Database
DATABASE_URL=postgresql://muset:muset@localhost:5432/muset
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Security
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:7989"]

# OAuth (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI Models - Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# AI Models - OpenAI (Optional)
OPENAI_API_KEY=your-openai-api-key-here

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Vector Database - Pinecone (Optional)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=muset-memories

# MCP Configuration
MCP_CONFIG_PATH=./mcp_config.json

# Skills Configuration
SKILLS_DIR=./skills

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:7989/api/v1
